{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "tasks": {
      "build": {
        "dependsOn": ["copy"],
        "outputs": ["./dist/**"],
        "cache": false
      },
      "clean": {
        "dependsOn": ["^clean"],
        "cache": false
      },
      "copy": {
        "dependsOn": ["^copy"],
        "cache": false
      },
      "lint": {
        "dependsOn": ["^lint"]
      },
      "start": {
        "cache": false,
        "persistent": true
      }
    }
  }