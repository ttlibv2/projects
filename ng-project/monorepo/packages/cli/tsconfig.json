{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "lib": ["ES2024", "dom"],
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2024",
    "types": ["node"],
    "typeRoots": [
      "./node_modules/@types",
      "./src/typings"
    ]
  },
  "include": ["bin", "package.json", "src", "lib"],
  "exclude": ["node_modules", "e2e", "dist", "src/typings/**"]
}