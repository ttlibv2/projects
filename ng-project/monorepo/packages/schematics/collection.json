{
  "$schema": "./node_modules/@angular-devkit/schematics/collection-schema.json",
  "schematics": {
    "new": {
      "description": "Create a project",
      "factory": "./src/new",
      "schema": "./src/new/schema.json"
    },
    "ng-lib": {
      "description": "Create a angular library",
      "factory": "./src/angular/library",
      "schema": "./src/angular/library/schema.json",
      "aliases": ["lib"]
    },
    "ng-app": {
      "description": "Create a angular application",
      "factory": "./src/angular/app",
      "schema": "./src/angular/app/schema.json",
      "aliases": ["app"]
    }
  }
}