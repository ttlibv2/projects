{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "lib": ["ES2022", "dom"],
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/**/files/**"]
}
