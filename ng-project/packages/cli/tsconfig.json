{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "lib": ["es2018", "dom"],
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "types": ["node"],
    "paths": {
      "@types/yargs": ["./yargs-types/index"]
    }
  },
  "include": ["bin", "package.json", "src"],
  "exclude": ["node_modules", "e2e", "dist"]
}