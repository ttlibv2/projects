{
  "name": "@ngdev/monorepo",
  "version": "11.0.5",
  "description": "CLI tool for monorepo",
  "license": "MIT",
  "scripts": {
    "run": "turbo run run",
    "build": "turbo run build",
    "//clean": "turbo run clean",
    "watch": "turbo watch build",
    "start0": "pnpm run start",
    "lint": "turbo run lint",
    "glink": "turbo run glink",
    "setup": "pnpm run clean && pnpm run init",
    "clean": "npx rimraf --glob **/node_modules **/dist **/.angular ./pnpm-lock.yaml",
    "init": "pnpm install"
  },
  "dependencies": {
    "@ngdev/cli": "link:packages/cli/dist",
    "@ngdev/schematics": "link:packages/schematics/dist"
  },
  "devDependencies": {
    "@types/node": "^22.13.9",
    "rimraf": "^6.0.1",
    "turbo": "^2.4.4"
  },
  "packageManager": "pnpm@10.7.0",
  "pnpm": {
    "overrides": {
      "@ngdev/schematics": "link:packages/schematics/dist",
      "@ngdev/cli": "link:packages/cli/dist"
    },
    "ignoredBuiltDependencies": [
      "@parcel/watcher",
      "esbuild",
      "lmdb",
      "msgpackr-extract"
    ]
  }
}