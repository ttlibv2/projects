{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "pnpm",
    "analytics": false
  },
  "newProjectRoot": "projects",
  "schematics": {
    "@schematics/angular:application": {
      "standalone": true,
      "inlineStyle": false,
      "inlineTemplate": false,
      "prefix": "t",
      "minimal": true,
      "routing": true,
      "skipInstall": false
    }
  },
  "projects": {
    "tslib": {
      "projectType": "library",
      "root": "projects/tslib",
      "sourceRoot": "projects/tslib/src",
      "prefix": "t",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/tslib/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/tslib/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/tslib/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/tslib/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        }
      }
    }
  }
}