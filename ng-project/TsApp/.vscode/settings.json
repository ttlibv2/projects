{
  "editor.fontSize": 18,
  "editor.fontFamily": "Jost,Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.smoothScrolling": true,
  "files.autoSave": "afterDelay",
  "prettier.endOfLine": "auto",
  "html.autoClosingTags": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": false,
  "prettier.bracketSameLine": true,
  "prettier.requireConfig": true,
  "prettier.tabWidth": 4,
  "angular.forceStrictTemplates": true,
  "html.format.indentHandlebars": true,
  "html.format.indentInnerHtml": true,
  "html.format.templating": true,
  "workbench.colorCustomizations": {
    "[Bearded Theme Black & Diamond1]": {
      "activityBar.background": "#fff",
      "menu.background": "#fff",
      "sideBar.background": "#fff"
    },
    "[Best Themes - Ayu Darkvenom]": {
      "editor.background": "#ffffff",
      "editor.wordHighlightTextBackground": "red"
    }
  },
  "editor.tabSize": 4,
  "scssFormatter.trailingComma": "all",
  "editor.defaultFormatter": "MikeBovenlander.formate",
  "[scss]": {
    "editor.defaultFormatter": "MikeBovenlander.formate"
  }
}
